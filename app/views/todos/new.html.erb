<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        新規todo作成
      </h1>
    </div>
  </div>
</section>


<% if @todo.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@todo.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @todo.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @todo do |f| %>
          <div class="field">
            <%= f.label :task, "タスク名", class: "label" %>
            <%= f.text_field :task, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :detail, "詳細", class: "label" %>
            <%= f.text_area :detail, class: "textarea" %>
          </div>


          <%= f.submit '投稿', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
